<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="progressCircleStyle">@style/ProgressCircleStyle</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceLarge</item>
        <item name="graphViewStyle">@style/GraphViewStyle</item>
        <item name="goalTypeStyle">@style/GoalTypeView</item>
    </style>

    <style name="GraphViewStyle">

        <item name="graphTextSize">12sp</item>
        <item name="graphTextColor">?android:attr/textColorSecondary</item>
        <item name="graphPlotLineWidth">2dp</item>
        <item name="graphAxisColor">@color/light_grey</item>
        <item name="graphAxisWidth">1dp</item>
        <item name="graphPlotPointRadius">3dp</item>
        <item name="graphDefaultMargin">@dimen/half_margin</item>
        <item name="graphPlotColor">@color/color_primary</item>
    </style>

    <style name="ShapeAppearanceLarge" parent="ShapeAppearance.MaterialComponents.LargeComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ProgressCircleStyle">

        <item name="strokeWidth">@dimen/goal_progress_stroke</item>
    </style>

    <style name="GoalCard" parent="Widget.MaterialComponents.CardView">

        <item name="cardBackgroundColor">@color/off_white</item>
        <item name="cardCornerRadius">@dimen/goal_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="GoalCardAdd" parent="Widget.MaterialComponents.CardView">

        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/light_grey</item>
    </style>

    <style name="TaskCard" parent="Widget.MaterialComponents.CardView">

        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="TaskCardTitle">

        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MainInput" parent="Widget.AppCompat.EditText">

        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/main_input_size</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GoalTypeView" parent="Widget.MaterialComponents.CardView">

        <item name="contentPaddingBottom">@dimen/half_margin</item>
        <item name="contentPaddingTop">@dimen/half_margin</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/checkable_stroke</item>
        <item name="android:checkable">true</item>
        <item name="cardBackgroundColor">@color/checkable_background</item>
        <item name="checkedIconTint">@color/color_primary</item>
    </style>

    <style name="Display">

        <item name="android:textSize">@dimen/display_text</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Header">

        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SectionHeader">

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="ContinueButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">20dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="chipStrokeWidth">@dimen/stroke_width</item>
        <item name="chipStrokeColor">@color/checkable_stroke</item>
        <item name="chipBackgroundColor">@color/checkable_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipCornerRadius">@dimen/corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AddGoalChip" parent="Widget.MaterialComponents.Chip.Action">

        <item name="chipBackgroundColor">@color/off_white</item>
        <item name="chipCornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AddGoalBackButton" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="iconTint">?android:attr/colorControlNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="fontFamily">sans-serif</item>
        <item name="icon">@drawable/round_arrow_back_24</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
