<resources>

    <style name="AppTheme.Splash">

        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceSmall</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceMedium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceLarge</item>

        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="progressCircleStyle">@style/ProgressCircleStyle</item>
        <item name="goalTypeStyle">@style/GoalTypeView</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
    </style>

    <style name="ShapeAppearanceSmall" parent="ShapeAppearance.MaterialComponents.SmallComponent">

        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ShapeAppearanceMedium" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ShapeAppearanceLarge" parent="ShapeAppearance.MaterialComponents.LargeComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="ProgressCircleStyle">

        <item name="strokeWidth">@dimen/goal_progress_stroke</item>
    </style>

    <style name="DropdownButton" parent="MaterialButtonStyle">

        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="icon">@drawable/baseline_arrow_drop_down_24</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="GoalCardAdd" parent="Widget.MaterialComponents.CardView">

        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/light_grey</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">

        <item name="cardElevation">0dp</item>
    </style>

    <style name="OutlinedCardView" parent="MaterialCardView">

        <item name="strokeColor">@color/checkable_stroke</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="checkedIconTint">@color/color_primary</item>
    </style>

    <style name="TaskCardTitle">

        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MainInput" parent="Widget.AppCompat.EditText">

        <item name="android:background">@null</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/main_input_size</item>
    </style>

    <style name="GoalTypeView" parent="OutlinedCardView">

        <item name="android:checkable">true</item>
        <item name="contentPaddingBottom">@dimen/half_margin</item>
        <item name="contentPaddingTop">@dimen/half_margin</item>
    </style>

    <style name="Display">

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Display.Small">

        <item name="android:textSize">16sp</item>
    </style>

    <style name="Display.Medium">

        <item name="android:textSize">22sp</item>
    </style>

    <style name="Display.Large">

        <item name="android:textSize">28sp</item>
    </style>

    <style name="Display.ExtraLarge">

        <item name="android:textSize">36sp</item>
    </style>

    <style name="SectionHeader">

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">

        <item name="iconSize">@dimen/small_component_icon</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="backgroundTint">@color/enableable_button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedMaterialButton" parent="MaterialButtonStyle">

        <item name="shapeAppearanceOverlay">@style/RoundedMaterialButtonShapeOverlay</item>
    </style>

    <style name="RoundedMaterialButtonShapeOverlay">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="InputButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:minWidth">128dp</item>
        <item name="shapeAppearanceOverlay">@style/InputButtonShape</item>
    </style>

    <style name="InputButtonShape">

        <item name="cornerSize">16dp</item> <!-- TODO Percentage not working -->
    </style>

    <style name="ContinueButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">20dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">@dimen/stroke_width</item>
        <item name="chipStrokeColor">@color/checkable_stroke</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipIconSize">@dimen/small_component_icon</item>
        <item name="iconEndPadding">8dp</item>
    </style>

    <style name="AddGoalChip" parent="Widget.MaterialComponents.Chip.Action">

        <item name="chipBackgroundColor">@color/off_white</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AddGoalBackButton" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="iconTint">?android:attr/colorControlNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="icon">@drawable/round_arrow_back_24</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Fab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">

        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TaskRowLine">

        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MenuItemRowAppearance">

        <item name="cornerSize">@dimen/corner_radius</item>
    </style>
</resources>
