<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/goal_success_title"
        style="@style/Display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_content_margin"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginEnd="@dimen/margin"
        android:text="@string/goal_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goal_success_name"
        style="@style/Header"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/goal_success_title"
        app:layout_constraintTop_toBottomOf="@id/goal_success_title" />

    <com.twisthenry8gmail.progresscircles.ProgressCircleView
        android:id="@+id/goal_success_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_content_margin"
        android:layout_marginEnd="@dimen/large_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goal_success_name" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/cd_done"
        android:id="@+id/goal_success_done"
        android:visibility="invisible"
        android:src="@drawable/round_done_24"
        app:layout_constraintBottom_toBottomOf="@id/goal_success_progress"
        app:layout_constraintEnd_toEndOf="@id/goal_success_progress"
        app:layout_constraintStart_toStartOf="@id/goal_success_progress"
        app:layout_constraintTop_toTopOf="@id/goal_success_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>
