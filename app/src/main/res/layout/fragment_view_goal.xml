<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.twisthenry8gmail.weeklyphoenix.util.DateTimeUtil" />

        <import type="com.twisthenry8gmail.weeklyphoenix.util.GoalDisplayUtil" />

        <variable
            name="viewmodel"
            type="com.twisthenry8gmail.weeklyphoenix.viewmodel.ViewGoal2ViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin">

            <com.twisthenry8gmail.buttons.AccessibleTouchImageButton
                style="@style/SecondaryImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/large_content_margin"
                android:onClick="@{() -> viewmodel.onClose()}"
                android:src="@drawable/round_close_24"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.twisthenry8gmail.buttons.AccessibleTouchImageButton
                android:id="@+id/view_goal_delete"
                style="@style/SecondaryImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_content_margin"
                android:layout_marginEnd="@dimen/double_margin"
                android:onClick="@{() -> viewmodel.onDelete()}"
                android:src="@drawable/round_delete_forever_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_goal_name"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/large_content_margin"
                android:text="@{viewmodel.goal.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_delete" />

            <TextView
                android:id="@+id/view_goal_target_text"
                style="@style/Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/large_content_margin"
                android:text="@{GoalDisplayUtil.INSTANCE.displayProgressToTarget(context.resources, viewmodel.goal)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_name" />

            <com.twisthenry8gmail.progresscircles.ProgressCircleView
                android:id="@+id/view_goal_progress"
                goal="@{viewmodel.goal}"
                android:layout_width="@dimen/view_goal_progress_width"
                android:layout_height="@dimen/view_goal_progress_width"
                android:layout_marginEnd="@dimen/double_margin"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_target_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_goal_target_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{GoalDisplayUtil.INSTANCE.displayProgressPercentage(context.resources, viewmodel.goal)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_progress"
                app:layout_constraintEnd_toEndOf="@id/view_goal_progress"
                app:layout_constraintStart_toStartOf="@id/view_goal_progress"
                app:layout_constraintTop_toTopOf="@id/view_goal_progress" />

            <TextView
                android:id="@+id/view_goal_resets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/goal_resets"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_progress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/double_margin"
                android:text="@{GoalDisplayUtil.INSTANCE.displayReset(context.resources, viewmodel.goal.reset)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_resets_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_goal_resets_label" />

            <TextView
                android:id="@+id/view_goal_reset_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/goal_next_reset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_resets_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/double_margin"
                android:text="@{DateTimeUtil.INSTANCE.displayMediumDate(viewmodel.goal.resetDate)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_reset_date_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_goal_reset_date_label" />

            <TextView
                android:id="@+id/view_goal_end_label"
                goneUnless="@{viewmodel.goal.hasEndDate()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/goal_end_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_reset_date_label" />

            <TextView
                goneUnless="@{viewmodel.goal.hasEndDate()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/double_margin"
                android:text="@{GoalDisplayUtil.INSTANCE.displayEndDate(context.resources, viewmodel.goal.endDate)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_end_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_goal_end_label" />

            <View
                android:id="@+id/view_goal_periodic_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginEnd="@dimen/double_margin"
                android:background="@color/off_white"
                app:layout_constraintTop_toBottomOf="@id/view_goal_end_label" />

            <TextView
                android:id="@+id/view_goal_periodic_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/goal_periodic_increase"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_periodic_divider" />

            <com.twisthenry8gmail.buttons.AccessibleTouchImageButton
                android:id="@+id/view_goal_periodic_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/double_margin"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewmodel.onPauseIncrease()}"
                android:src="@{viewmodel.goal.increasePaused ? @drawable/round_play_arrow_24 : @drawable/round_pause_24}"
                android:tint="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_periodic_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_goal_periodic_label"
                app:touchPadding="@dimen/accessibility_padding" />

            <TextView
                android:id="@+id/view_goal_periodic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin"
                android:text="@{GoalDisplayUtil.INSTANCE.displayProgressValue(context.resources, viewmodel.goal.type, viewmodel.goal.increase)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/view_goal_periodic_label"
                app:layout_constraintEnd_toStartOf="@id/view_goal_periodic_pause"
                app:layout_constraintTop_toTopOf="@id/view_goal_periodic_label" />

            <androidx.constraintlayout.widget.Group
                goneUnless="@{viewmodel.goal.increase > 0}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="
                view_goal_periodic_divider,
                view_goal_periodic_label,
                view_goal_periodic,
                view_goal_periodic_pause" />

            <View
                android:id="@+id/view_goal_history_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginEnd="@dimen/double_margin"
                android:background="@color/off_white"
                app:layout_constraintTop_toBottomOf="@id/view_goal_periodic" />

            <TextView
                android:id="@+id/view_goal_history_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/goal_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_goal_history_divider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_goal_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginEnd="@dimen/double_margin"
                app:layout_constraintTop_toBottomOf="@id/view_goal_history_label" />

            <androidx.constraintlayout.widget.Group
                goneUnless="@{!viewmodel.histories.empty}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="
                view_goal_history_divider,
                view_goal_history_label,
                view_goal_history" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>