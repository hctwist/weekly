<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/vertical_layout_margin">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/main_menu_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/main"
            app:itemShapeFillColor="@color/checkable_background"
            app:itemShapeAppearanceOverlay="@style/MenuItemRowAppearance"
            bind:checkedItem="@{@id/main_home}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>