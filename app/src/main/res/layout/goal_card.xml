<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="goal"
            type="com.twisthenry8gmail.weeklyphoenix.data.Goal" />

        <variable
            name="subtitlegenrator"
            type="com.twisthenry8gmail.weeklyphoenix.util.GoalDisplayUtil.SubtitleGenerator" />

        <variable
            name="clickhandler"
            type="com.twisthenry8gmail.weeklyphoenix.view.main.GoalAdapter.ClickHandler" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/goal_card"
        style="@style/GoalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickhandler.onGoalClick(goal)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:fontFamily="sans-serif-medium"
                android:text="@{goal.name}"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/goal_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/goal_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:text="@{subtitlegenrator.generateSubtitle(goal)}"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.twisthenry8gmail.progresscircles.ProgressCircleView
                android:id="@+id/goal_progress_view"
                goal="@{goal}"
                android:layout_width="@dimen/goal_progress"
                android:layout_height="@dimen/goal_progress"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:onClick="@{() -> goalActionButton.performClick()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/goal_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cd_goal_action"
                android:onClick="@{() -> clickhandler.onGoalAction(goal)}"
                android:src="@{context.getDrawable(goal.type.actionIconRes)}"
                android:tint="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/goal_progress_view"
                app:layout_constraintEnd_toEndOf="@id/goal_progress_view"
                app:layout_constraintStart_toStartOf="@id/goal_progress_view"
                app:layout_constraintTop_toTopOf="@id/goal_progress_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
