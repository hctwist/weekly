<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.twisthenry8gmail.weeklyphoenix.viewmodel.AddGoalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/add_goal_title_back"
            style="@style/AddGoalChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/large_content_margin"
            android:layout_marginEnd="@dimen/large_content_margin"
            android:onClick="@{() -> viewmodel.onBack()}"
            android:text="@{viewmodel.type.getDisplayName(context)}"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_goal_title_hint"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/large_content_margin"
            android:text="@string/add_goal_title_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_goal_title_back" />

        <EditText
            android:id="@+id/add_goal_title"
            style="@style/Display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_marginEnd="@dimen/large_content_margin"
            android:background="@null"
            android:hint="@{viewmodel.titleHint}"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:text="@={viewmodel.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_goal_title_hint" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_goal_title_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginTop="@dimen/large_content_margin"
            android:layout_marginEnd="@dimen/double_margin"
            android:enabled="@{viewmodel.validTitle}"
            android:onClick="@{() -> viewmodel.onConfirmTitle()}"
            android:text="@string/cont"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_goal_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>